@using FinanSmart.Dominio.ValueObjects;
@model List<Cadastro>
@{
}
<div class="d-flex justify-content-center">
    <table class="table m-5 w-75">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">PrimeiroNome</th>
                <th scope="col">Sobrenome</th>
                <th scope="col">Email</th>
                <th scope="col">CPF</th>
                <th scope="col">Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.ID</th>
                    <td>@item.PrimeiroNome</td>
                    <td>@item.Sobrenome</td>
                    <td>@item.Email</td>
                    <td>@item.CPF</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@item.ID" class="btn btn-primary">Editar</a>
                        <a asp-action="Excluir" asp-route-id="@item.ID" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        
        </tbody>
    </table>
</div>