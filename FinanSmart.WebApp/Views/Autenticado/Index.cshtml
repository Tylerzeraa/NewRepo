@model UsuarioViewModel

<form method="post" asp-action="Autenticar">
    <div class="form-group">
        <label for="Usuario">Usuário</label>
        <input type="text" asp-for="Usuario" class="form-control" placeholder="Digite o seu usuário" />
    </div>
    <div class="form-group">
        <label for="Senha">Senha</label>
        <input type="password" class="form-control" value="@Model.Senha" id="Senha" name="Senha" placeholder="Digite a sua senha">
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="ManterConectado">
        <label class="form-check-label" for="ManterConectado">Manter Conectado</label>
    </div>
    <button type="submit" class="btn btn-success btn-block">Logar</button>
</form>