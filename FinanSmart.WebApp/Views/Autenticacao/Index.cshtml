@model CadastroModel
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<style>

</style>

<div class="d-flex justify-content-center align-items-center">
    <div class="card shadow-lg" style="width: 80%; height: 70%;">
        <div class="card-body d-flex">
            <div class="w-50" style="height: 600px">
                <img src="~/img/logo.png" class="img-fluid" style="margin-top: 140px;" alt="Usuário">
            </div>
            <div class="w-50">
                <form asp-action="Cadastrar" asp-controller="Autenticacao" class="form form-bg-color">
                    <div class="card">
                        <div class="card-header d-flex justify-content-center align-items-center">
                            <div>
                                <div class="title">
                                    <h1>Login</h1>
                                </div>
                                <div class="login-button">
                                    <button class="btn custom-enter-button"><a href="#">Entrar</a></button>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="input-box mb-3">
                                <label for="firstname">Primeiro Nome</label>
                                <input asp-for="PrimeiroNome" type="text" class="form-control" placeholder="Digite seu primeiro nome" required>
                            </div>

                            <div class="input-box mb-3">
                                <label for="lastname">Sobrenome</label>
                                <input asp-for="Sobrenome" type="text" class="form-control" placeholder="Digite seu sobrenome" required>
                            </div>
                            <div class="input-box mb-3">
                                <label for="email">E-mail</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Digite seu e-mail" required>
                            </div>

                            <div class="input-box mb-3">
                                <label for="number">CPF</label>
                                <input asp-for="CPF" id="number" class="form-control" placeholder="xxx.xxx.xxx-xx" required>
                            </div>

                            <div class="input-box mb-3">
                                <label for="password">Senha</label>
                                <input asp-for="Senha" type="password" class="form-control" placeholder="Digite sua senha" required>
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-success">Continuar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Adiciona uma função para formatar o CPF
    document.getElementById("number").addEventListener("input", function () {
        let cpf = this.value.replace(/\D/g, ""); // Remove tudo que não é número
        if (cpf.length > 11) cpf = cpf.slice(0, 11); // Limita a 11 caracteres
        cpf = cpf.replace(/(\d{3})(\d{3})(\d{3})(\d{2})/, "$1.$2.$3-$4"); // Formata o CPF
        this.value = cpf;
    });
</script>